<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.ProfileFragment">

    <View
        android:id="@+id/ivSolid"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:background="@color/primary" />

    <TextView
        android:id="@+id/tvProf"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="@color/primary"
        android:fontFamily="@font/poppins_semibold"
        android:text="  Profile"
        android:textColor="#FFFFFF"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Name"
        android:textColor="#2D3047"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/poppins"
        android:text="John Doe"
        android:textColor="@color/primary"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pwd"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/poppins"
            android:inputType="textPassword"
            android:text="12345678"
            android:textColor="@color/primary"
            android:textSize="16sp" />

        <Button
            android:id="@+id/showHideBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/secondary2"
            android:text="Show" />
    </LinearLayout>


    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Location"
        android:textColor="#2D3047"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvLocaionInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/poppins"
        android:text="Haverford"
        android:textColor="@color/primary"
        android:textSize="16sp" />


    <Button
        android:id="@+id/btnEdit"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="150dp"
        android:backgroundTint="@color/secondary"
        android:fontFamily="@font/poppins_semibold"
        android:text="Edit" />

</LinearLayout>